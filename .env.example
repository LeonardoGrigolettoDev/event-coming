EVENT_COMING_SERVER_READ_TIMEOUT=30s
EVENT_COMING_SERVER_WRITE_TIMEOUT=30s
EVENT_COMING_SERVER_IDLE_TIMEOUT=60s

# Database
EVENT_COMING_DATABASE_HOST=localhost
