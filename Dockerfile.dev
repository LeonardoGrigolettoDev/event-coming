FROM golang:1.23-alpine

WORKDIR /app

# Install air for hot reload (use compatible version)
RUN go install github.com/air-verse/air@v1.52.3

# Install dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy source (will be overwritten by volume mount)
COPY . .

CMD ["air", "-c", ".air.toml"]